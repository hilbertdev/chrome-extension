{
    "manifest_version": 2,
    "name": "My browser extension",
    "version": "2",

    "description": "A plain text description",

    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "permissions": [
    "webRequest",
    "webRequestBlocking",
    "https://*/*",
    "http://*/*"
    ],
  "content_scripts" : [
     {
         "matches": [
             "<all_urls>"
         ],
         "js": ["jquery-3.4.1.min.js", "content.js"],
         "css": ["content.css"]
       
     }
 ] 
}

